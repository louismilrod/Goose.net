@model Goose.Models.Concert_Models.ConcertDetails

@{
    ViewBag.Title = "Details - ";
}

<h2>@Html.DisplayFor(model => model.DateOfPerformance)</h2>

<div>
    <dl class="dl-horizontal">
    
        <dt>
            @Html.DisplayNameFor(model => model.BandName):
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BandName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Location):
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Location)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DateOfPerformance):
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateOfPerformance)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.VenueName):
        </dt>

        <dd>
            @Html.DisplayFor(model => model.VenueName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Notes):
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Notes)
        </dd>


    </dl>
        @foreach (var item in Model.Setlists)
        {
            <table class="table table-striped table-condensed" id="songtable">
                <tr>                    
                    <th>
                        @Html.DisplayNameFor(model => item.SetNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => item.SongsForSetlist)
                    </th>
                    <th></th>
                </tr>          
                
                <tr>                   
                    <td>
                        @Html.DisplayFor(modelItem => item.SetNumber)
                    </td>
                    <td>
                        @foreach (var song in item.SongsForSetlist)
                        {
                            <span class="songswithoutcommas" id="songcolor">@song.Title</span>
                        }
                    </td>                   
                </tr>          

            </table>
        }

</div>

    @if (User.IsInRole("admin"))
    {
        
        @Html.ActionLink("Edit", "Edit", new { id= Model.ConcertId }, new {@class = "btn btn-default"}) 
        
    }
    @Html.ActionLink("Back to List", "Index", null, new {@class = "btn btn-default"})


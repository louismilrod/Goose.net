@model IEnumerable<Goose.Models.Setlist_Models.SetlistViewModel>

@{
    ViewBag.Title = "Setlist - ";
}

<h2>Setlists</h2>
@if (User.IsInRole("admin"))
{
<p>
    @Html.ActionLink("Create New", "Create")
</p>
}
<table class="table table-condensed table-responsive">
    <tr>
        @if (User.IsInRole("admin"))
        {
        <th>
            @Html.DisplayNameFor(model => model.SetlistId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ConcertId)
        </th>
        }
        <th>
            @Html.DisplayNameFor(model => model.DateOfPerformance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SetNumber)
        </th> 
        <th>
            @Html.DisplayNameFor(model => model.SongsForSetlist)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    @if (User.IsInRole("admin"))
    {
        <td>
            @Html.DisplayFor(modelItem => item.SetlistId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ConcertId)
        </td>
    }
    <td>
        @Html.DisplayFor(modelItem => item.DateOfPerformance)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SetNumber)
    </td>
    @foreach (var song in item.SongsForSetlist)
    {
    <td class="pull-left">
        <div class="">   
            <span class="">                
                @song.Title
            </span>
        </div> 
    </td>
    }
<td class="pull-left">
    @if (User.IsInRole("admin"))
    {
        <span>
        @Html.ActionLink("Edit", "Edit", new { id = item.SetlistId }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.SetlistId })
        </span>

    }
</td>
</tr>

}

</table>
